SHAREHOME="/home/share"
ATTICHOME="/home/attic"
SOPHOMORIXCACHE="/var/cache/sophomorix"
TASKSCACHE="$SOPHOMORIXCACHE/tasks"
SAMBAHOME="/home/samba"
