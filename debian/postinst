#! /bin/sh
# postinst script for linuxmuster
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)

	# read default variables
	. /usr/share/linuxmuster-clientconfig/config/dist.conf || exit 1

	# read debconf stuff
	. /usr/share/debconf/confmodule

	# reading basedn and serverip
	db_get shared/ldapns/ldap-server
	serverip=$RET
	if [ -z "$serverip" ]; then
		echo "Cannot get the ip for the ldap server! Skipping configuration!"
		exit 0
	fi

	db_get shared/ldapns/base-dn
	basedn=$RET
	if [ -z "$basedn" ]; then
		echo "Cannot get ldap basedn! Skipping configuration!"
		exit 0
	fi
	db_stop

	# need the gdm dir
	[ -d /etc/gdm/PostLogin ] || mkdir -p /etc/gdm/PostLogin

	# patching configuration files
	echo "Patching configuration ..."
	cd /var/lib/linuxmuster-clientconfig/templates
	find -type f | xargs -i -t sh -c \
	"sed -e 's%@@studentshome@@%${STUDENTSHOME}%g
		 s%@@sharehome@@%${SHAREHOME}%g
		 s%@@taskscache@@%${TASKSCACHE}%g
		 s%@@backupmntpoint@@%${BACKUPMNTPOINT}%g
	         s%@@basedn@@%${basedn}%g
	         s%@@serverip@@%${serverip}%g' {} > /{}" &> /dev/null

      ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
