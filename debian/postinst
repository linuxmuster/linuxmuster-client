#! /bin/bash
# postinst script for linuxmuster
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

# read debconf stuff
. /usr/share/debconf/confmodule

case "$1" in
    configure)

	# read default variables
	. /usr/share/linuxmuster-client/config || exit 1
	. /usr/share/linuxmuster-client/supported_distros || exit 1

	# sets hostname for dhclient at boot time
	update-rc.d linuxmuster-hostname start 40 S .

	# adding system groups plugdev and nvram
	for i in plugdev nvram; do
		if ! grep -q ^${i}: /etc/group; then
			addgroup --system $i
		fi
	done

	# adding administrator to sudoers
	if [ -e /etc/sudoers ]; then
		if ! grep -q ^$ADMINISTRATOR /etc/sudoers; then
			echo "Adding $ADMINISTRATOR to sudoers ..."
			echo >> /etc/sudoers
			echo "# linuxmuster: $ADMINISTRATOR may gain root privileges" >> /etc/sudoers
			echo "$ADMINISTRATOR ALL=(ALL) ALL" >> /etc/sudoers
		fi
	fi

	# adding cupsys user to shadow group
	if id cupsys &> /dev/null; then
		if ! id cupsys | grep -qw shadow; then
			addgroup cupsys shadow
		fi
	fi

	# adding printoperators group to cups system groups
	if grep -q ^SystemGroup /etc/cups/cupsd.conf; then
		if ! grep ^SystemGroup /etc/cups/cupsd.conf | grep -q $PRINTERADMINS; then
			echo "Adding group $PRINTERADMINS to cupsd system groups ..."
			sed -e "s/^SystemGroup.*/SystemGroup lpadmin $PRINTERADMINS/" /etc/cups/cupsd.conf > /etc/cups/cupsd.conf.tmp
			mv /etc/cups/cupsd.conf.tmp /etc/cups/cupsd.conf
			/etc/init.d/cupsys restart
		fi
	fi

	# check the distribution and do specific stuff
	if grep -q "$dapper" /etc/issue; then
		echo "This is $dapper!"
		distro=dapper
		binpath=sbin
	elif grep -q "$edgy" /etc/issue; then
		echo "This is $edgy!"
		distro=edgy
		binpath=bin
	elif grep -q "$feisty" /etc/issue; then
		echo "This is $feisty!"
		distro=feisty
		binpath=bin
	elif grep -q "$etch" /etc/issue; then
		binpath=bin
		if grep -q "$knoppix" /etc/motd; then
			echo "This is $knoppix!"
			distro=knoppix
			# adding knoppix user and group
			if ! grep -q ^knoppix: /etc/group; then
				addgroup --system knoppix
			fi
			if ! grep -q ^knoppix: /etc/passwd; then
				adduser --system --no-create-home --ingroup knoppix --disabled-login knoppix
			fi
		else
			echo "This is $etch!"
			distro=etch
			# adding system groups and users
			for i in fuse rdma tss; do
				if ! grep -q ^${i}: /etc/group; then
					addgroup --system $i
				fi
			done
			if ! grep -q ^tss: /etc/passwd; then
				adduser --system --no-create-home --ingroup tss --disabled-login tss
			fi
		fi
	else
		echo "This distribution is not supported!"
		exit 1
	fi

	# reading basedn and serverip
	db_get shared/ldapns/ldap-server
	serverip=$RET
	if [ -z "$serverip" ]; then
		echo "Cannot get the ip for the ldap server! Skipping configuration!"
		exit 0
	fi

	db_get shared/ldapns/base-dn
	basedn=$RET
	if [ -z "$basedn" ]; then
		echo "Cannot get ldap basedn! Skipping configuration!"
		exit 0
	fi

	# we need this directory
	[ -d /etc/gdm/PostLogin ] || mkdir -p /etc/gdm/PostLogin

	# patching configuration files
	echo "Patching configuration ..."
	cd /var/lib/linuxmuster-client
	for i in common $distro; do
		cd $i/templates
		find -type f | xargs -i -t sh -c \
		"sed -e 's%@@studentshome@@%${STUDENTSHOME}%g
			 s%@@sharehome@@%${SHAREHOME}%g
			 s%@@taskscache@@%${TASKSCACHE}%g
			 s%@@backupmntpoint@@%${BACKUPMNTPOINT}%g
			 s%@@basedn@@%${basedn}%g
			 s%@@binpath@@%${binpath}%g
			 s%@@administrator@@%${ADMINISTRATOR}%g
			 s%@@pgmadmin@@%${PGMADMIN}%g
			 s%@@serverip@@%${serverip}%g' {} > /{}" 2> /dev/null 1> /dev/null
		cd ../../
	done

	# distro specific after patching
	if [ -e /etc/X11/ivman-xsession ]; then
		if [ "$distro" = "dapper" ]; then
			chmod 755 /etc/X11/ivman-xsession
		else
			rm /etc/X11/ivman-xsession
		fi
	fi

	echo "Note: You have to reboot the client if you have installed the package for the first time!"

      ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

db_stop

exit 0
